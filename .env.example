# Environment Variables for Nur Makon Hotel
# Copy this file to .env and fill in your values

# Database Configuration
POSTGRES_PASSWORD=your_secure_password_here
DATABASE_URL=postgresql://postgres:your_secure_password_here@db:5432/nurmakon_hotel

# Application Configuration
NODE_ENV=production
PORT=5000
SESSION_SECRET=your_super_secret_session_key_here

# Docker Configuration
DOCKER_IMAGE=your-dockerhub-username/nurmakon-hotel:latest

# Domain Configuration (for SSL)
DOMAIN=your-domain.com

# SSL Configuration (optional)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/private.key

# Optional: Email Configuration
# SMTP_HOST=your_smtp_host
# SMTP_PORT=587
# SMTP_USER=your_email
# SMTP_PASS=your_password